<Window x:Class="FamilyBudgetApp.Windows.AddFamily"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyBudgetApp.Windows"
        mc:Ignorable="d"
        Title="AddFamily" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Unesite naziv porodice:" Margin="20 20 20 5" FontSize="14"/>
            <TextBox x:Name="familyNameTextBox" Margin="15 0 15 15" Height="25" FontSize="13" />
            <Button Content="Dodaj" Width="100" Height="25" Background="#5eac9c" Foreground="White" HorizontalAlignment="Center" Margin="20" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
